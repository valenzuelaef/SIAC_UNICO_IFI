@{
    Layout = null;
}

<div id="INTMailReceipt" class="container-fluid">
    <div class="scrollbudy">
        <div class="col-sm-3">
            <div id="DataCustomer" class="panel-group" role="tablist" aria-multiselectable="true">
                <div class="panel claro-panel-primary">
                    <div id="customerDataHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-user"></span>

                        <a data-toggle="collapse" aria-expanded="true" data-parent="#DataCustomer" aria-controls="customerDataCollapse" class="collapsed transaction-ref-color"> Datos del Cliente</a>
                    </div>
                    <div class="panel-body" id="customerDataCollapse" role="tabpanel" aria-labelledby="customerDataHead">
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Nro.Servicio:</label></td>
                                    <td class="col-sm-6"><label id="lblNroServicio"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Cliente:</label></td>
                                    <td class="col-sm-6"><label id="lblCliente"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Contacto:</label></td>
                                    <td class="col-sm-6"><label id="lblContacto"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">DNI/RUC:</label></td>
                                    <td class="col-sm-6"><label id="lblDNI_RUC"></label></td>
                                </tr>

                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Producto:</label></td>
                                    <td class="col-sm-6"><label id="lblProducto"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Cuenta:</label></td>
                                    <td class="col-sm-6"><label id="lblCuenta"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Representante Legal:</label></td>
                                    <td class="col-sm-6"><label id="lblRepren_Legal"></label></td>
                                </tr>

                                <tr>
                                    <td class="col-sm-6"><label class="control-label">ID:</label></td>
                                    <td class="col-sm-6"><label id="lblCustomerID"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Teléf.Referencia:</label></td>
                                    <td class="col-sm-6"><label id="lblTelRef"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Email:</label></td>
                                    <td class="col-sm-6"><label id="lblEmail"></label></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div id="addressDataHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-home"></span>
                        <a data-toggle="collapse" href="#addressDataCollapse" aria-expanded="false" data-parent="#DataCustomer" aria-controls="addressDataCollapse" class="collapsed transaction-ref-color"> Dirección de Facturación</a>
                    </div>
                    <div class="panel-body panel-collapse collapse" id="addressDataCollapse" role="tabpanel" aria-labelledby="addressDataHead">
                        <table class="table table-condensed">
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Dirección:</label></td>
                                <td class="col-sm-6"><label id="lblDireccion"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Referencia:</label></td>
                                <td class="col-sm-6"><label id="lblNotasDirec"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Pais:</label></td>
                                <td class="col-sm-6"><label id="lblPais"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Departamento:</label></td>
                                <td class="col-sm-6"><label id="lblDepartamento"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Provincia:</label></td>
                                <td class="col-sm-6"><label id="lblProvincia"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Distrito:</label></td>
                                <td class="col-sm-6"><label id="lblDistrito"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Código Ubigeo:</label></td>
                                <td class="col-sm-6"><label id="lblCodUbigeo"></label></td>
                            </tr>
                        </table>
                    </div>
                    <div id="businessRulesHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-th-list"></span>
                        <a data-toggle="collapse" href="#businessRulesCollapse" aria-expanded="false" data-parent="#DataCustomer" aria-controls="businessRulesCollapse" class="collapsed transaction-ref-color"> Reglas de Atención</a>
                    </div>
                    <div class="panel-body panel-collapse collapse" id="businessRulesCollapse" role="tabpanel" aria-labelledby="businessRulesHead">
                        <div id="divReglas">

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-9">
            <div id="tabChangePhoneNumber" role="tabpanel" percent="0%">
                <div class="panel claro-panel-primary">
                    <div class="panel-heading">
                        AFILIACIÓN A RECIBO POR CORREO ELECTRÓNICO IFI
                    </div>
                    <div class="panel-body">

                        <div class="col-md-12">


                            <form id="formGen" name="formGen">
                                <div class="panel panel-default ">
                                    <div class="row">
                                        <div class="col-md-12">



                                            <div class="col-md-5"><label>Envío de Recibo por Correo Electrónico: </label></div>
                                            <div class="col-md-1"><input type="checkbox" id="chkEnvio" disabled /> </div>
                                            <div class="col-md-5"><label>Responsable Pago: </label></div>
                                            <div class="col-md-1"><input type="checkbox" id="chkResponsable" checked="checked" disabled /> </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default ">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-2"><label>E-mail Autorizado <span class="text-right label-red-service">(*):</span></label></div>
                                            <div class="col-md-5">
                                                <div class="input-group form-inline">
                                                    <input type="text" class="form-control  input-sm" aria-label="..." placeholder="Ejemplo123" id="txtEmail">
                                                    <span class="input-group-addon input-sm">
                                                        <label>&#64</label>
                                                    </span>
                                                    <input type="text" class="form-control input-sm" id="txtDominio" name="txtDominio" placeholder="dominio.com" />
                                                </div>
                                            </div>
                                            <div class="col-md-2"><label>Acción <span class="text-right label-red-service">(*):</span></label></div>
                                            <div class="col-md-3">
                                                <select class="form-control select-list input-sm" id="cboAccion" name="cboAccion"></select>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-2"><label>Confirmación E-mail <span class="text-right label-red-service">(*):</span></label></div>
                                            <div class="col-md-5">
                                                <div class="input-group form-inline">
                                                    <input type="text" class="form-control  input-sm" aria-label="..." placeholder="Ejemplo123" id="txtEmail2">
                                                    <span class="input-group-addon input-sm">
                                                        <label>&#64</label>
                                                    </span>
                                                    <input type="text" class="form-control input-sm" id="txtDominio2" name="txtDominio" placeholder="dominio.com" />
                                                </div>
                                            </div>
                                         
                                        @*<div class="col-md-2"><label>Teléfono para confirmar afiliación <span class="text-right label-red-service">(*):</span></label></div>*@
                                        <div class="col-md-3" hidden>
                                                <input id="txtTelfAfil" type="text" class="form-control" aria-label="..." placeholder="999999999" maxlength="9">
                                            </div>

                                        </div>
                                    </div>

                                    </div>
                                <div class="panel panel-default ">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-5"><label>Enviar Condiciones de Servicio por Email :</label></div>
                                            <div class="col-md-1"><input type="checkbox" id="chkEnviar" checked="checked" /> </div>
                                            <div class="col-md-3"><input type="text" id="txtEnviarCon" class="form-control" /> </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-3"><label>Punto de Atencion <span class="text-right label-red-service">(*):</span></label></div>
                                            <div class="col-md-3"><select class="form-control input-sm" id="ddlCACDAC"></select></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default ">
                                    <div class="row">
                                        <div class="col-md-12">



                                            <div class="col-md-12"><label>Notas :</label></div>
                                            <div class="col-md-12"><textarea class="form-control" rows="3" id="txtNotes" name="txtNotes"></textarea></div>



                                        </div>
                                    </div>




                                    <div class="row">
                                        <div class="col-sm-12 text-center">
                                            <button id="btnSave" type="button" class="btn transaction-button"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                                            <button id="btnClose" type="button" class="btn transaction-button"><span class="glyphicon glyphicon-home"></span> Cerrar</button>
                                            <button id="btnConstancy" type="button" class="btn transaction-button" data-toggle="modal" data-target="_blank"><span class="glyphicon glyphicon-list-alt"></span> Constancia</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>




                    </div>
                </div>
            </div>
        </div>
      
    </div>
    <br />

</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@System.Web.Optimization.Scripts.Render("~/bundles/IFITransactions/MailReceipt")
@System.Web.Optimization.Scripts.Render("~/bundles/IFITransactions/ReadRecordPDF/ReadRecord")