@{
    Layout = null;
}
<style>
    .label-default {
        background-color: #a7a8aa !important;
    }
</style>
<div id="INTChangeBillingCycle" class="container-fluid">
    <div class="scrollbudy">
        <div class="col-sm-3">
            <div id="DataCustomer" class="panel-group" role="tablist" aria-multiselectable="true">
                <div class="panel claro-panel-primary">
                    <div id="customerDataHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-user"></span>
                        <a data-toggle="collapse" aria-expanded="true" data-parent="#DataCustomer" aria-controls="customerDataCollapse" class="collapsed transaction-ref-color"> Datos del Cliente</a>
                    </div>
                    <div class="panel-body" id="customerDataCollapse" role="tabpanel" aria-labelledby="customerDataHead">
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Contrato:</label></td>
                                    <td class="col-sm-6">
                                        <label id="lblContrato"></label>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Customer ID:</label></td>
                                    <td class="col-sm-6"><label id="lblCustomerID"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Tipo de Cliente:</label></td>
                                    <td class="col-sm-6"><label id="lblTipoCliente"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Cliente:</label></td>
                                    <td class="col-sm-6"><label id="lblCliente"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Contacto:</label></td>
                                    <td class="col-sm-6"><label id="lblContacto"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">DNI/RUC:</label></td>
                                    <td class="col-sm-6"><label id="lblDNI_RUC"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Representante Legal:</label></td>
                                    <td class="col-sm-6"><label id="lblRepren_Legal"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Plan Actual:</label></td>
                                    <td><label id="lblPlan"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Fecha Activación:</label></td>
                                    <td class="col-sm-6"><label id="lblFechaActivacion"></label></td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Ciclo de Facturación:</label></td>
                                    <td class="col-sm-6"><label id="lblCicloFact"></label> </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-6"><label class="control-label">Límite Crédito:</label></td>
                                    <td class="col-sm-6"><label id="lblLimiteCred"></label> </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="addressDataHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-home"></span>
                        <a data-toggle="collapse" href="#addressDataCollapse" aria-expanded="false" data-parent="#DataCustomer" aria-controls="addressDataCollapse" class="collapsed transaction-ref-color"> Dirección de Facturación</a>
                    </div>
                    <div class="panel-body panel-collapse collapse" id="addressDataCollapse" role="tabpanel" aria-labelledby="addressDataHead">
                        <table class="table table-condensed">
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Dirección:</label></td>
                                <td class="col-sm-6"><label id="lblDireccion"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Referencia:</label></td>
                                <td class="col-sm-6"><label id="lblNotasDirec"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Pais:</label></td>
                                <td class="col-sm-6"><label id="lblPais"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Departamento:</label></td>
                                <td class="col-sm-6"><label id="lblDepartamento"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Provincia:</label></td>
                                <td class="col-sm-6"><label id="lblProvincia"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Distrito:</label></td>
                                <td class="col-sm-6"><label id="lblDistrito"></label></td>
                            </tr>
                            <tr>
                                <td class="col-sm-6"><label class="control-label">Código Ubigeo:</label></td>
                                <td class="col-sm-6"><label id="lblCodUbigeo"></label></td>
                            </tr>
                        </table>
                    </div>
                    <div id="businessRulesHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-th-list"></span>
                        <a data-toggle="collapse" href="#businessRulesCollapse" aria-expanded="false" data-parent="#DataCustomer" aria-controls="businessRulesCollapse" class="collapsed transaction-ref-color"> Reglas de Atención</a>
                    </div>
                    <div class="panel-body panel-collapse collapse" id="businessRulesCollapse" role="tabpanel" aria-labelledby="businessRulesHead">
                        <div id="divReglas">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-9">
        <div id="BillingCycleInformation">
            <div class="panel claro-panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    Cambio Ciclo Facturación
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <form id="formBillingCycle" name="formBillingCycle">
                            <div class="panel panel-default ">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="col-md-3"><h4><span class="label label-default">Datos de la transacción:</span></h4></div>


                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="col-md-3"><label style="margin-top: 8px;">Nuevo Ciclo de Facturación: </label></div>
                                        <div class="col-md-9"><select class="form-control input-sm" id="cboNewCycle"></select></div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="col-md-3"><label style="margin-top: 8px;">Envío por E-mail: <span class="text-right label-red-service">*</span> </label></div>
                                        <div class="col-md-1"><div class="checkbox"><label><input id="chkEmail" type="checkbox" value=""></label></div></div>
                                        <div class="col-md-8"><input id="txtEmail" class="form-control input-sm " /> </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="col-md-3"><label style="margin-top: 8px;">Punto de Atención: </label></div>
                                        <div class="col-md-3"><select class="form-control input-sm" id="ddlCACDAC"></select></div>
                                        <div class="col-md-3"><label style="margin-top: 8px;">Fecha de Programación: </label></div>
                                        <div class=" col-sm-3">
                                            <div class="input-group input-group-sm">
                                                <input type="text" class="form-control input-sm" id="txtDateCycle" placeholder="DD/MM/AAAA">
                                                <label id="txtcalendartxtDateCycle" class="btn transaction-button input-group-addon" for="txtDateCycle">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </label>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>
                            <center>

                                <button id="btnGuardar" type="button" class="btn transaction-button"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                                <button id="btnCerrar" type="button" class="btn transaction-button"><span class="glyphicon glyphicon-home"></span> Cerrar</button>
                                <button id="btnConstancia" type="button" class="btn transaction-button"><span class="glyphicon glyphicon-list-alt"></span> Constancia</button>
                            </center>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="myModalLoad" style="display:none;">
        <span> <img src="~/Images/loading2.gif" width="25" height="25" />  Cargando ....</span>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@System.Web.Optimization.Scripts.Render("~/bundles/IFITransactions/ChangeBillingCycle")





